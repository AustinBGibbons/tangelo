{
    "name": "histogram",
    "width": 800,
    "height": 400,
    "padding": {"top": 30, "bottom": 30, "left": 35, "right": 30},
    "duration": 750,
    "data": [
        {"name": "values"}
    ],
    "scales": [
        {"name": "x", "type": "ordinal", "domain": {"data": "values", "field": "bin"}, "range": "width", "padding": 0},
        {"name": "y", "type": "linear", "domain": [0,1], "range": "height"}
    ],
    "axes": [
        {"axis": "x", "scale": "x", "values": []},
        {"axis": "y", "scale": "y"}
    ],
    "marks": [
        {
            "type": "rect",
            "name": "histogram_bars",
            "from": "values",
            "enter": {
                "x1": {"scale": "x", "field": "bin"},
                "y1": {"scale": "y", "field": "value"},
                "y2": {"scale": "y", "value": 0},
                "width": {"scale": "x", "band": true, "offset": -1},
                "fill": {"value": "darkgreen"}
            },
            "update": {
                "x1": {"scale": "x", "field": "bin"},
                "y1": {"scale": "y", "field": "value"},
                "y2": {"scale": "y", "value": 0},
                "width": {"scale": "x", "band": true, "offset": -1},
                "fill": {"value": "darkgreen"}
            }
        },

        {
            "type": "rect",
            "name": "histogram_bar_containers",
            "from": "values",
            "enter": {
                "x1": {"scale": "x", "field": "bin"},
                "width": {"scale": "x", "band": true, "offset": -1},
                "y1": {"scale": "y", "value": 0},
                "y2": {"scale": "y", "value": 1},
                "fill": {"value": "black"},
                "opacity": {"value": 0.0}
            }
        }
    ]
}
